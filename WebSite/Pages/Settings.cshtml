@page
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Settings</title>
</head>
<body>
    <div align="center">
        <div style="width: 500px; height: 270px; border: double">
            <div class="login link" onclick="Logout()">Logout</div>

            <table>
                <tr>
                    <th>Date format:</th>
                    <td><select id="dateFormat"></select></td>
                </tr>
                <tr>
                    <th>Number format:</th>
                    <td><select id="numberFormat"></select></td>
                </tr>
                <tr>
                    <th>Default currency:</th>
                    <td><select id="currency"></select></td>
                </tr>
                <tr><td style="height: 50px" /></tr>
            </table>

            <div align="center">
                <button onclick="Save()" title="Save" id="save">Save</button>
                <button onclick="Cancel()" title="Save" id="cancel">Cancel</button>
            </div>
        </div>
    </div>
</body>
</html>

<link rel="stylesheet" href="~/css/site.css">
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/cookies.js" asp-append-version="true"></script>
<script src="~/js/settings.js" asp-append-version="true"></script>
